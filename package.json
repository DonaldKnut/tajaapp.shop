{
  "name": "taja-shop",
  "version": "1.0.0",
  "description": "Next-generation Nigerian e-commerce marketplace for thrift fashion, vintage items, and handmade crafts",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "mobile"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:mobile": "cd mobile && npm start",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd frontend && npm run start",
    "start:backend": "cd backend && npm run start",
    "setup": "npm install && npm run setup:frontend && npm run setup:backend && npm run setup:mobile",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend && npm install",
    "setup:mobile": "cd mobile && npm install",
    "mobile:ios": "cd mobile && npm run ios",
    "mobile:android": "cd mobile && npm run android",
    "mobile:web": "cd mobile && npm run web"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "ecommerce",
    "marketplace",
    "nigeria",
    "thrift",
    "fashion",
    "nextjs",
    "nodejs",
    "react-native"
  ],
  "author": "Taja.Shop Team",
  "license": "MIT"
}
